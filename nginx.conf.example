# Nginx reverse proxy configuration for Cycast
# Place this in /etc/nginx/sites-available/cycast or include in main nginx.conf

upstream cycast_backend {
    server localhost:8001;
    # Or if using Docker: server cycast:8001;
    
    # Optional: Multiple backends for load balancing
    # server cycast2:8001;
    # server cycast3:8001;
}

# HTTP server - redirect to HTTPS
server {
    listen 80;
    listen [::]:80;
    server_name radio.example.com;

    # Let's Encrypt validation
    location /.well-known/acme-challenge/ {
        root /var/www/certbot;
    }

    # Redirect all other traffic to HTTPS
    location / {
        return 301 https://$server_name$request_uri;
    }
}

# HTTPS server
server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    server_name radio.example.com;

    # SSL configuration
    ssl_certificate /etc/letsencrypt/live/radio.example.com/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/radio.example.com/privkey.pem;
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers HIGH:!aNULL:!MD5;
    ssl_prefer_server_ciphers on;

    # Security headers
    add_header Strict-Transport-Security "max-age=31536000; includeSubDomains" always;
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;

    # Logs
    access_log /var/log/nginx/cycast-access.log;
    error_log /var/log/nginx/cycast-error.log;

    # Status page and API
    location / {
        proxy_pass http://cycast_backend;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        # Timeouts
        proxy_connect_timeout 60s;
        proxy_send_timeout 60s;
        proxy_read_timeout 60s;
    }

    # Audio stream endpoint - special configuration
    location /stream {
        proxy_pass http://cycast_backend;
        
        # Disable buffering for streaming
        proxy_buffering off;
        proxy_cache off;
        
        # Headers
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        
        # Streaming optimizations
        proxy_http_version 1.1;
        proxy_set_header Connection "";
        tcp_nodelay on;
        tcp_nopush on;
        
        # No timeouts for long-lived connections
        proxy_connect_timeout 10s;
        proxy_send_timeout 0;
        proxy_read_timeout 0;
        
        # Buffer settings
        proxy_buffer_size 16k;
        proxy_buffers 8 16k;
        proxy_busy_buffers_size 32k;
        
        # Optional: Rate limiting
        # limit_rate 256k;  # 256 KB/s per connection
    }

    # API endpoints
    location /api/ {
        proxy_pass http://cycast_backend;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        
        # Enable CORS if needed
        add_header Access-Control-Allow-Origin *;
    }

    # Optional: Basic authentication for admin pages
    # location /admin {
    #     auth_basic "Cycast Admin";
    #     auth_basic_user_file /etc/nginx/.htpasswd;
    #     proxy_pass http://cycast_backend;
    # }
}

# Optional: Source upload endpoint (if you want external source access)
# This should be secured properly!
server {
    listen 8000 ssl http2;
    listen [::]:8000 ssl http2;
    server_name radio.example.com;

    ssl_certificate /etc/letsencrypt/live/radio.example.com/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/radio.example.com/privkey.pem;

    # Only allow specific IPs (your DJs)
    # allow 1.2.3.4;
    # deny all;

    location / {
        proxy_pass http://localhost:8000;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        
        # No buffering for source uploads
        proxy_buffering off;
        proxy_request_buffering off;
        
        # Timeouts
        proxy_connect_timeout 10s;
        proxy_send_timeout 0;
        proxy_read_timeout 0;
    }
}
